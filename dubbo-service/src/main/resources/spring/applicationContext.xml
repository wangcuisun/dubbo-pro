<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo
        http://dubbo.apache.org/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">

    <!--<context:component-scan base-package="com.wang.service"></context:component-scan>-->

    <!--项目名称-->
    <dubbo:application name="dubbo-service"></dubbo:application>
    <!--注册中心（zookeeper）的地址-->
    <dubbo:registry address="zookkeeper://192.168.137.1:2181"></dubbo:registry>
    <!--包扫描-->
    <dubbo:annotation package="com.wang.service.impl"></dubbo:annotation>

</beans>